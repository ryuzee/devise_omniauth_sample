<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
  <div class="form-group">
    <label class="control-label" for="InputText">Email</label>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="InputText">Password</label>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox-inline">
      <label>
        <%= f.check_box :remember_me %>Remeber Me...
      </label>
   </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in", class: "btn btn-info" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
<% end %>
