<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label class="control-label" for="InputText">Name</label>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="InputText">Display Name</label>
    <%= f.text_field :display_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="InputText">Email</label>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

<% if f.object.password_required? %>
  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label" for="InputText">Password</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
<% end %>

  <div class="form-group">
    <label class="control-label" for="InputText">Biography</label>
    <%= f.text_area :biography, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-info" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Cancel', signup_cancel_path %>
  </div>
<% end %>

